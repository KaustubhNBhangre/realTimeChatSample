<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cerulean</item>
    </style>

    <style name="user_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_user">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">@dimen/chat_text_size</item>
    </style>

    <style name="cerulean.button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/cerulean</item>
    </style>

    <style name="grey.button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/dkGrey</item>
    </style>

</resources>
